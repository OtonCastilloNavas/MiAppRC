<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:id="@+id/cvPersona"
        app:cardBackgroundColor="#bbddda">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ivFoto"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/apoyo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNombre"
                android:layout_alignStart="@+id/ivFoto"
                android:layout_alignBottom="@id/ivFoto"
                android:textSize="15sp"
                android:text="Oton"
                android:padding="2dp"
                android:textStyle="bold"
                android:background="#8ebbddda"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFecha"
                android:layout_alignTop="@id/ivFoto"
                android:layout_alignEnd="@id/ivFoto"
                android:text="Castillo Navas"
                android:textSize="7sp"
                android:padding="2dp"
                android:background="#8ebbddda"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ibFav"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/star_big_off"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>